<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form novalidate class="validated-form" action="/campgrounds/<%= campground._id %>?_method=PUT"
                method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input required type="text" id="title" name="campground[title]" class="form-control"
                        value="<%= campground.title %>">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input required type="text" id="location" name="campground[location]" class="form-control"
                        value="<%= campground.location %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input required type="text" id="image" name="campground[image]" class="form-control"
                        value="<%= campground.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input required type="text" class="form-control" id="price" placeholder="0.00"
                            aria-label="price" aria-describedby="price-label" name="campground[price]"
                            value="<%= campground.price %>">
                    </div>

                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea required type="text" id="description" name="campground[description]"
                        class="form-control"><%= campground.description %> </textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
                <a href="/campgrounds/<%= campground._id %>">Back to campground</a>
            </form>
        </div>
    </div>